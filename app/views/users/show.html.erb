<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>      
        <%= @user.name %>
        <%= link_to "Sign out", signout_path, method: "delete" %>
      </h1>
    </section>
  </aside>  
</div>
<%= link_to 'Create Gadget', new_user_gadget_path(@user), :class => 'btn' %>
<% unless @user.gadgets.empty? %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>
          "Name"
        </th>
        <th>
          "Description"
        </th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @gadgets.each do |gadget| %>
        <tr>
          <td>
            <%= gadget.name %>
          </td>
          <td>
            <%= gadget.description %>
          </td>
          <td>
            <%= link_to 'show', user_gadget_path(gadget, @user), :class => 'btn' %>
            <%= link_to 'edit', edit_user_gadget_path(gadget, @user), :class => 'btn btn-primary' %>            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>